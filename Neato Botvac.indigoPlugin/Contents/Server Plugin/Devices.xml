			<State id='connected'>
				<ValueType>Boolean</ValueType>
				<TriggerLabel>Connected State Is</TriggerLabel>
				<ControlPageLabel>Connected</ControlPageLabel>
			</State>
		</States>
	</Device>
</Devices>
